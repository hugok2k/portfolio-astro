---
import Footer from '../components/Footer.astro'
import Navbar from '../components/Navbar.astro'
import '../stylesheet/global.css'
import '@fontsource-variable/roboto-mono'

const {
  title = 'Hugo Avila Dev',
  description = 'Porfolio Hugo Avila - Desarrollador Frontend/Fullstack',
  ogurl = 'https://hugoavila.dev/images/og.webp'
} = Astro.props
---

<html lang='es'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <title>{title}</title>
    <meta name='description' content={description} />
    <link rel='icon' type='image/svg+xml' href='/ha.svg' />
    <meta name='generator' content={Astro.generator} />
    <!-- Facebook Meta Tags -->
    <meta property='og:url' content='https://hugoavila.dev/' />
    <meta property='og:type' content='website' />
    <meta property='og:title' content={title} />
    <meta property='og:description' content={description} />
    <meta property='og:image' content={ogurl} />
    <meta property='og:site_name' content={description} />
    <!-- Twitter Meta Tags -->
    <meta name='twitter:card' content='summary_large_image' />
    <meta property='twitter:domain' content='hugoavila.dev' />
    <meta property='twitter:url' content='https://hugoavila.dev/' />
    <meta name='twitter:title' content={title} />
    <meta name='twitter:description' content={description} />
    <meta name='twitter:image' content={ogurl} />
  </head>
  <body>
    <Navbar />
    <slot />
    <Footer />
  </body>
</html>

<style>
  body {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
  }
</style>
