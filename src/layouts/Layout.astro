---
const {
  title = 'Hugo Avila Dev',
  description = 'Porfolio Hugo Avila - Desarrollador Frontend/Fullstack'
} = Astro.props
---

<html lang='es'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <title>{title}</title>
    <meta name='description' content={description} />
    <link rel='icon' type='image/svg+xml' href='/ha.svg' />
    <meta name='generator' content={Astro.generator} />
    <meta property='og:site_name' content={description} />
    <meta property='og:url' content='https://hugoavila.vercel.app/' />
    <meta property='og:type' content='website' />
    <meta property='og:title' content={title} />
    <meta property='og:description' content={description} />
    <meta
      property='og:image'
      content='https://hugoavila.vercel.app/images/og.jpg'
    />
  </head>
  <body>
    <slot />
  </body>
</html>
