---
export interface Props {
	id?: string
	title?: string
	classname?: string
	type?: "button" | "submit"
}
const { id, title, classname, type } = Astro.props
---

<button id={id} class={`flex gap-2 justify-center items-center px-6 py-2 bg-transparent border-2 border-primary hover:border-transparent text-(--color-text-base) font-semibold shadow hover:bg-primary/80 transition duration-300 cursor-pointer ${classname}`} type={type ?? 'button'} aria-label= {title} title={title}>
	{Astro.slots.default ? <slot /> : title}
</button>