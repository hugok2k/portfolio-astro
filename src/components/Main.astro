---
import Github from '../components/svg/github.astro'
import Linkedin from '../components/svg/linkedin.astro'
import Mail from '../components/svg/mail.astro'
---

<main class='sectionContainer'>
  <img class='imgAvatar' src='/images/avatar.webp' alt='Una fotografía sobre mí' />
  <h1 class='titleName'>Hola. Soy Hugo</h1>
  <h2 class='textDev'>Fullstack developer, con un fuerte interés en la tecnología y la programación.</h2>
  <div class='socialContainer'>
    <a
      class='svglink'
      href='https://www.linkedin.com/in/devhugoavila/'
      target='_blank'
      aria-label='Link a linkedin'
      rel='noreferrer noopener'
    >
      <Linkedin height='28' width='28' />
    </a>
    <a
      class='svglink'
      href='https://github.com/hugok2k'
      target='_blank'
      aria-label='Link a github'
      rel='noreferrer noopener'
    >
      <Github height='28' width='28' />
    </a>
    <a
      class='svglinkStroke'
      href='mailto:hugoavila.dev@gmail.com'
      target='_blank'
      aria-label='Link a correo'
      rel='noreferrer noopener'
    >
      <Mail />
    </a>
  </div>
  <a class='buttonDownload' href='/data/CV-HugoAvila.pdf' download='CV-HugoAvila.pdf' rel='noreferrer noopener'
    ><svg
      xmlns='http://www.w3.org/2000/svg'
      fill='none'
      viewBox='0 0 24 24'
      stroke-width='1.5'
      stroke='currentColor'
      width='24'
      height='24'
    >
      <path
        stroke-linecap='round'
        stroke-linejoin='round'
        d='M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z'
      ></path>
    </svg>
    Descarga mi CV</a
  >
</main>

<style>
  .sectionContainer {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin: 0;
    height: 100vh;
    width: 100%;
    max-width: 880px;
  }
  .imgAvatar {
    border-radius: 50%;
    width: 200px;
    height: 200px;
  }
  .titleName {
    font-size: 3.75rem;
    font-weight: 600;
    font-style: normal;
    text-align: center;
  }
  .textDev {
    font-size: 1.25rem;
    text-align: center;
    font-weight: 400;
    padding: 0 20px;
  }
  .socialContainer {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    margin-top: 30px;
    gap: 20px;
  }
  .svglink {
    fill: var(--color-primary);
    transition: 0.3s;
  }
  .svglink:hover {
    fill: var(--color-svg);
  }
  .svglinkStroke {
    stroke: var(--color-primary);
    transition: 0.3s;
  }
  .svglinkStroke:hover {
    stroke: var(--color-svg);
  }
  .buttonDownload {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 10px;
    background-color: var(--color-btn-bg);
    color: var(--color-btn-text);
    padding: 10px 12px 10px 12px;
    font-size: 16px;
    border-radius: 4px;
    cursor: pointer;
    margin-top: 30px;
    font-weight: 600;
    transition: all 0.3s linear;
    stroke: #fff;
    border: 2px solid var(--color-btn-bg);
  }
  .buttonDownload:hover {
    background-color: var(--color-btn-hover);
    color: var(--color-primary);
    transition: all 0.3s linear;
    border: 2px solid var(--color-btn-border-hover);
    stroke: var(--color-primary);
  }
  @media (max-width: 500px) {
    .imgAvatar {
      width: 160px;
      height: 160px;
      margin-bottom: 20px;
    }
    .titleName {
      font-size: 2.6rem;
      margin-bottom: 10px;
    }
    .textDev {
      font-size: 1rem;
      width: 340px;
    }
  }
</style>
