---
import Github from '../components/svg/github.astro'
import Linkedin from '../components/svg/linkedin.astro'
---

<article class="sectionContainer">
  <picture>
    <img class="imgAvatar" src="/images/avatar.webp" alt="avatar" />
  </picture>
  <h1 class="titleName">Hola. Soy Hugo</h1>
  <h3 class="textDev">Fullstack Developer, apasionado de la tecnología y la programación.</h3>
  <div class="socialContainer">
    <a class="svglink" href="https://www.linkedin.com/in/devhugoavila/" target="_blank" aria-label="link to linkedin">
      <Linkedin height="28" width="28" />
    </a>
    <a class="svglink" href="https://github.com/hugok2k" target="_blank" aria-label="link to github">
      <Github height="28" width="28" />
    </a>
  </div>
  <a class="buttonLanding" href="/data/CV-HugoAvila.pdf" download="CV-HugoAvila.pdf">Descarga mi CV</a>
</article>

<style>
  .sectionContainer {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin: 0;
    height: 100vh;
  }
  .imgAvatar {
    border-radius: 50%;
    width: 200px;
    height: 200px;
  }
  .titleName {
    font-size: 60px;
    font-weight: 700;
    font-style: normal;
    text-align: center;
  }
  .textDev {
    font-size: 20px;
    text-align: center;
    font-weight: 400;
  }
  .socialContainer {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    margin-top: 30px;
    gap: 20px;
  }
  .svglink {
    fill: var(--color-primary);
    transition: 0.3s;
  }
  .svglink:hover {
    fill: var(--color-svg);
  }
  .buttonLanding {
    background-color: var(--color-btn-bg);
    color: var(--color-btn-text);
    font-weight: 600;
    padding: 10px 12px 10px 12px;
    font-size: 16px;
    border-radius: 4px;
    cursor: pointer;
    margin-top: 30px;
    font-weight: 600;
    transition: all 0.3s linear;

    border: 2px solid var(--color-btn-bg);
  }
  .buttonLanding:hover {
    background-color: var(--color-btn-hover);
    color: var(--color-primary);
    transition: all 0.3s linear;
    border: 2px solid var(--color-btn-border-hover);
  }
  @media (max-width: 500px) {
    .imgAvatar {
      width: 160px;
      height: 160px;
      margin-bottom: 20px;
    }
    .titleName {
      font-size: 42px;
      margin-bottom: 10px;
    }
    .textDev {
      font-size: 16px;
      width: 340px;
    }
  }
</style>
