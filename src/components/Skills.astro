---
import Astrosvg from './svg/astrosvg.astro'
import Postgres from './svg/postgres.astro'
import Javascript from '../components/svg/javascript.astro'
import React from './svg/react.astro'
import Html5 from './svg/html5.astro'
import Css3 from './svg/css3.astro'
import Node from './svg/node.astro'
---

<span class="subtitle" id="skills">Skills</span>
<div class="iconContainer">
  <div class="skillIconContainer">
    <Javascript />
    <span>JavaScript</span>
  </div>
  <div class="skillIconContainer">
    <React />
    <span>ReactJS</span>
  </div>
  <div class="skillIconContainer">
    <Astrosvg />
    <span>Astro</span>
  </div>
  <div class="skillIconContainer">
    <Node />
    <span>NodeJS</span>
  </div>
  <div class="skillIconContainer">
    <Postgres />
    <span>PostgreSQL</span>
  </div>
  <div class="skillIconContainer">
    <Html5 />
    <span>HTML5</span>
  </div>
  <div class="skillIconContainer">
    <Css3 />
    <span>CSS3</span>
  </div>
</div>
<style>
  .iconContainer {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px;
  }
  .skillIconContainer {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 80px;
    text-align: center;
  }
  .fa-square-js {
    font-size: 80px;
    color: hsl(52, 84%, 63%);
  }
  .fa-react {
    font-size: 80px;
    color: hsl(189, 100%, 50%);
  }
  .fa-html5 {
    font-size: 80px;
    color: hsl(12, 73%, 51%);
  }
  .fa-css3-alt {
    font-size: 80px;
    color: hsl(199, 71%, 53%);
  }
</style>
