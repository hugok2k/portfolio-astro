<style>
  .footer {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-top: 100px;
    min-height: 200px;
    background-color: var(--color-bg-footer);
    width: 100%;
    font-size: 14px;
  }
  .footerSpan {
    color: var(--color-text-base);
    padding: 2px 40px;
    text-align: center;
  }
  .licence {
    color: var(--color-licence);
    text-decoration: none;
  }
  .licence:hover {
    color: var(--color-svg);
  }
  .socialContainerFooter {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    margin-top: 20px;
    gap: 20px;
  }
  .svglink {
    fill: var(--color-primary);
    transition: 0.3s;
  }
  .svglink:hover {
    fill: var(--color-svg);
  }
  .svglinkStroke {
    stroke: var(--color-primary);
    transition: 0.3s;
  }
  .svglinkStroke:hover {
    stroke: var(--color-svg);
  }
</style>
