<style>
  .footer {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-top: 100px;
    min-height: 200px;
    background-color: #23241f;
    width: 100%;
    font-size: 14px;
  }
  .licence {
    color: var(--color-primary);
    text-decoration: none;
  }
  .licence:hover {
    color: #fff;
  }
